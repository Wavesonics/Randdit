<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/disabled_outline"/>
            <solid android:color="@color/disabled"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/outline"/>
            <solid android:color="@color/accent_alt" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="@dimen/button_stroke_width" android:color="@color/outline"/>
            <solid android:color="@color/accent" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <solid android:color="@color/accent" />
        </shape>
    </item>
</selector>