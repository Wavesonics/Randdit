<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RandditActionBar</item>
        <item name="android:buttonStyle">@style/RandditButton</item>
    </style>

    <style name="RandditActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="RandditButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/accent_button</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
