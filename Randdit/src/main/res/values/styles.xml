<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RandditActionBar</item>
        <item name="android:buttonStyle">@style/RandditButton</item>
        <item name="android:dialogTheme">@style/RandditDialog</item>
    </style>

    <style name="RandditActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <!--
        <item name="android:windowActionBarOverlay">true</item>
        -->
    </style>

    <style name="RandditButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/accent_button</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RandditDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:buttonStyle">@style/RandditButton</item>
        <item name="android:windowTitleStyle">@style/RandditDialogTitle</item>
    </style>

    <style name="RandditDialogTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>
